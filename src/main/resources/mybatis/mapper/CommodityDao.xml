<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace： 名称空间 可以随意命名 -->
<mapper namespace="com.syard.pojo.Commodity">
	
	<select id="findDataList" resultType="Commodity" parameterType="PageBean">
		select * from tbl_s_commodity where 1=1 
		<if test="startTime != null">
			<![CDATA[ and create_time >= date(#{startTime,jdbcType=TIMESTAMP})  ]]>
		</if>
		<if test="endTime != null">
			 <![CDATA[ and create_time <= date(#{endTime,jdbcType=TIMESTAMP})  ]]>
		</if>
		<if test="id != null and id != ''">
			and id = #{id}
		</if>
		<if test="key != null and key != ''">
			and category_name = '%${key}%'
		</if>
		<if test="key3 != null and key3 != '' and key3 !='all'">
			and status like #{key3}
		</if>
		<if test="key2 != null and key2 != ''">
			and title >= '%${key2}%'
		</if>
	</select>
</mapper>